<h1 class="m-0 px-3 pb-4 border-bottom border-primary"><%= image_pack_tag("banks/#{bank.name.underscore}.png", style: 'height: 50px')%></h1>
<% accounts.each do |account| %>
  <div class="container">
    <div class="row py-3 border-bottom">
      <div class="col">
        <h5 class="mb-0"><%= link_to account.name, bank_account_path(bank, account) %></h5>
        <small class="text-muted"><%= account.remote_id %></small>
      </div>
      <div class="col text-right">
        <h5 class="mb-0">
          <% if account.balance.amount < 0 %>
            <span class="badge badge-warning">OD</span>
            <%= account.balance.format.gsub('-', '') %>
          <% else %>
            <%= account.balance.format %>
          <% end %>
        </h5>
        <small class="text-muted">Available <%= account.available_balance.format %></small>
      </div>
    </div>
  </div>
<% end %>
<div class="py-4 border-top border-primary text-center">
  <div class="d-flex justify-content-center"><%= paginate accounts, theme: 'twitter-bootstrap-4' %></div>
  <div><%= page_entries_info accounts %></div>
</div>
